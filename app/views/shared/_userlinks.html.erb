<div class="btn-group"><button class="btn btn-sm dropdown-toggle" data-toggle="dropdown">
    <a href="#">
      <i class="icon-user"></i>
    </a>
  </button>
  <ul class="dropdown-menu">
  <% if logged_in? %>
    <li><%= link_to h(current_user.login.capitalize), user_path(current_user) %></li>
    <li><%= link_to "My Maps", my_maps_path(current_user) %></li>
    <li><%= link_to "My Activity", user_activity_path(current_user) %></li>
    <li><%= link_to "Settings", edit_user_path(current_user) %></li>
    <li><%= link_to "Log Out", logout_url %></li>
    <% if current_user.has_role?("administrator") || current_user.has_role?("super user") %>
      <li class="divider"></li>
      <li><%= link_to "All Maps", maps_path %></li>
      <li><%= link_to "All Mosaics", layers_path %></li>
      <li><%= link_to "All Activity", activity_url %></li>
      <li><%= link_to "All Comments", url_for(:controller => "comments", :action => "index") %></li>
      <li><%= link_to "Groups", groups_path %></li>
      <li><%= link_to "Imports", imports_path %></li>
      <li><%= link_to "User Stats", url_for(:controller => "users", :action => "stats") %></li>
      <li><%= link_to "Administer Users", users_path %></li>
    <% end %>
  <% else %>
    <li><%= link_to "Log in", new_session_path %></li>
  <% end %>
  </ul>
</div>