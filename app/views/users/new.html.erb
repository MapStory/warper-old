<div class="padded">
  <%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>
<p><label for="login">Name</label><br/>
<%= f.text_field :login %></p>

<p><label for="email">Email (You'll use this to log in with)</label><br/>
<%= f.text_field :email %></p>

<p><label for="password">Password</label><br/>
<%= f.password_field :password %></p>

<p><label for="password_confirmation">Confirm Password</label><br/>
<%= f.password_field :password_confirmation %></p>

<div id="signup-advice">
  Before you sign up, please read the <a href="http://www.nypl.org/help/about-nypl/legal-notices/privacy-policy">NYPL Privacy Policy</a> 
  and if you contribute to <a href="http://maps.nypl.org">maps.nypl.org</a>, please make sure you have read the 
  <a href="http://www.nypl.org/policy-patron-generated-web-content">NYPL Policy on Patron-Generated Content</a>.
</div>

<p><%= submit_tag 'Sign up' %></p>
<% end -%>
</div>
