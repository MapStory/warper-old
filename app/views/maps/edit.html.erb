<div class="col-sm-12">
<div class="row">
	<div class="col-sm-12">
		<h1>Editing Map Attributes</h1>
		<%= error_messages_for :map %>
	</div>
</div>

<%= render :partial => "form_remote", :locals => {:page => "edit"} %>

<div class="row">
	<div class="col-sm-12">
		<div class="expire_notice">
			<p>If maps are not updated within <%= MAP_EXPIRE_TIME/86400 %> days they will be removed.</p>
			<% if @map.expired? %>
			<p>This map has not been edited recently and will be removed within a few minutes.</p>
			<% else %>
			<p>This map will be removed on <%= @map.expires_on.strftime("%A %B %-d at %l:%M %P") %>.</p>
			<% end %>
		</div>
	</div>
</div>

<%- if (current_user = @map.owner || admin_authorized?) -%>
<div class="row">
	<div class="col-sm-12">
  	<div class="mapbtn"><%= link_to 'Delete this map.', {:controller=>"maps", :action=>"delete", :id => @map}, :class => "btn btn-danger" %></div>
  </div>
</div>
<% end %>
</div>